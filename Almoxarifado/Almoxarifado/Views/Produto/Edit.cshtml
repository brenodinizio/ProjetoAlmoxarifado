@model Almoxarifado.Models.PRODUTO

@{
    ViewBag.Title = "Editando";
}

<h2>Cadastro de Produtos</h2>

<div>
    <form action="/Produto/Edit?id=@Model.PROID" method="post">

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control"
                   maxlenght="100" id="descricao" name="descricao"
                   value=@Model.PRODESCRICAO
                   required />
        </div>

        <div class="form-group">
            <label for="minimo">Mínimo</label>
            <input type="number" class="form-control"
                   id="minimo" name="minimo" value=@Model.PROMINIMO min="0"
                   required />
        </div>

        <div class="form-group">
            <label for="maximo">Máximo</label>
            <input type="number" class="form-control"
                   id="maximo" name="maximo" value=@Model.PROMAXIMO min="0"
                   required />

        </div>

        <div class="form-group">
            <label for="estoque">Estoque</label>
            <input type="number" class="form-control"
                   id="estoque" name="estoque" value=@Model.PROESTOQUE min="0"
                   required />
        </div>

        <a href="/Produto/Index"> <button type="button" class="btn btn-primary">Voltar</button>  </a>
        <button type="submit" class="btn btn-success">Salvar</button>




    </form>



</div>

